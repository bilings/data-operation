#avgPriceIndex_wrapper {
    position: absolute;
    left: 10px;
    top: 10px;
    width: 100%;
}
#avgPriceIndex_wrapper .qualityDiv {
    width: 120px;
}

#avgPriceIndex_wrapper #btnDiv {
    width: 400px;
}
/*全局设定，输入框的大小*/
.layui-form-label {
    padding: 5px 15px;
}

.layui-input, .layui-select, .layui-textarea {
    height: 30px;
    line-height: 30px;
    width: 120px;
}
.layui-input-inline {
    float: left;
    width: 120px;
    margin-right: 10px;
}

.layui-form-select dl dd, .layui-form-select dl dt {
    line-height: 30px;
}
